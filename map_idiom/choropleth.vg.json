{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total Immigrants to Australia (1980-2022)",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/MilkT34/3179/8dc89868c2000338c90c244e12eb0e0cf2dfd4ba/worldmap.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/MilkT34/3179/refs/heads/main/merged.csv",
            "format": {"type": "csv"}
          },
          "key": "Country",
          "fields": [
            "1980", "1981", "1982", "1983", "1984", "1985", "1986", "1987",
            "1988", "1989", "1990", "1991", "1992", "1993", "1994", "1995", 
            "1996", "1997", "1998", "1999", "2000", "2001", "2002", "2003", 
            "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", 
            "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", 
            "2020", "2021", "2022"
          ]
        }
      },
      {
        "calculate": "datum['1980'] + datum['1981'] + datum['1982'] + datum['1983'] + datum['1984'] + datum['1985'] + datum['1986'] + datum['1987'] + datum['1988'] + datum['1989'] + datum['1990'] + datum['1991'] + datum['1992'] + datum['1993'] + datum['1994'] + datum['1995'] + datum['1996'] + datum['1997'] + datum['1998'] + datum['1999'] + datum['2000'] + datum['2001'] + datum['2002'] + datum['2003'] + datum['2004'] + datum['2005'] + datum['2006'] + datum['2007'] + datum['2008'] + datum['2009'] + datum['2010'] + datum['2011'] + datum['2012'] + datum['2013'] + datum['2014'] + datum['2015'] + datum['2016'] + datum['2017'] + datum['2018'] + datum['2019'] + datum['2020'] + datum['2021'] + datum['2022']",
        "as": "total_immigrants"
      },
      {
        "calculate": "datum['total_immigrants'] == 0 ? 0.1 : datum['total_immigrants']",
        "as": "immigrants_fixed"
      }
    ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/MilkT34/3179/8dc89868c2000338c90c244e12eb0e0cf2dfd4ba/worldmap.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": "null", "stroke": "grey"}
      },
      {
        "mark": {"type": "geoshape"},
        "encoding": {
          "color": {
            "field": "immigrants_fixed",
            "type": "quantitative",
            "scale": {
              "scheme": "blues",
              "type": "log"
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "immigrants_fixed", "type": "quantitative", "title": "Total Number of Immigrants (1980-2022)"}
          ]
        }
      },
      {
        "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.3, "fill": "transparent"},
        "encoding": {
          "color": {"value": "transparent"}
        }
      }
    ]
  }