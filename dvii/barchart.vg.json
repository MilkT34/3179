{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Top 5 Countries of Origin by Decade",
    "fontSize": 24,
    "anchor": "start",
    "offset": 40
  },
  "data": {
    "url": "https://raw.githubusercontent.com/MilkT34/3179/refs/heads/main/merged.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "fold": [
        "1980", "1981", "1982", "1983", "1984", "1985", "1986", "1987",
        "1988", "1989", "1990", "1991", "1992", "1993", "1994", "1995",
        "1996", "1997", "1998", "1999", "2000", "2001", "2002", "2003",
        "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011",
        "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019"
      ],
      "as": ["year", "immigrants"]
    },
    {
      "calculate": "floor(datum.year / 10) * 10", 
      "as": "decade"
    },
    {
      "aggregate": [
        {"op": "sum", "field": "immigrants", "as": "totalImmigrants"}
      ],
      "groupby": ["Country", "decade"] 
    },
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "totalImmigrants", "order": "descending"}],
      "groupby": ["decade"] 
    },
    {
      "filter": "datum.rank <= 5"
    },
    {
      "filter": {
        "param": "decadeSelector",
        "empty": false
      }
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal",
      "title": "Country",
      "sort": "-y"
    },
    "y": {
      "field": "totalImmigrants",
      "type": "quantitative",
      "title": "Total Immigrants"
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "scale": {
        "domain": [
          "Hong Kong", "Malaysia", "New Zealand", 
          "United Kingdom", "United States of America", 
          "China", "India", "Philippines"
        ],
        "range": [
          "#1f77b4", "#ff7f0e", "#2ca02c", 
          "#d62728", "#9467bd", "#8c564b", 
          "#e377c2", "#7f7f7f" 
        ]
      }
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "totalImmigrants", "type": "quantitative", "format": ",", "title": "Total Immigrants"}
    ]
  },
  "width": 1000,
  "height": 350,
  "selection": {
    "decadeSelector": {
      "type": "single",
      "fields": ["decade"],
      "bind": {
        "input": "range",
        "min": 1980,
        "max": 2010,
        "step": 10,
        "name": "Select Decade: "
      },
      "init": {"decade": 1980} 
    }
  }
}
