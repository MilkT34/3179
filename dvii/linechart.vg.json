{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Yearly number of Immigrants (1980-2022)",
    "fontSize": 24,
    "anchor": "start",
    "offset": 40
  },
  "data": {
    "url": "https://raw.githubusercontent.com/MilkT34/3179/refs/heads/main/merged.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "fold": [
        "1980", "1981", "1982", "1983", "1984", "1985", "1986", "1987",
        "1988", "1989", "1990", "1991", "1992", "1993", "1994", "1995",
        "1996", "1997", "1998", "1999", "2000", "2001", "2002", "2003",
        "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011",
        "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019",
        "2020", "2021", "2022"
      ],
      "as": ["year", "immigrants"]
    },
    {
      "aggregate": [
        {"op": "sum", "field": "immigrants", "as": "totalImmigrants"}
      ],
      "groupby": ["year", "Continent"]
    }
  ],
  "params": [
    {
      "name": "viewType",
      "value": "No",
      "bind": {
        "input": "select",
        "options": ["No", "Yes"], 
        "labels": ["No", "Yes"],
        "name": "See Continents: "
      }
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "filter": "viewType == 'No'"
        },
        {
          "aggregate": [
            {"op": "sum", "field": "totalImmigrants", "as": "grandTotal"}
          ],
          "groupby": ["year"]
        }
      ],
      "mark": {"type": "area", "color": "slategrey"},
      "encoding": {
        "x": {"field": "year", "type": "ordinal", "title": "Year"},
        "y": {
          "field": "grandTotal",
          "type": "quantitative",
          "title": "Total Immigrants"
        },
        "tooltip": [
          {"field": "year", "type": "ordinal", "title": "Year"},
          {
            "field": "grandTotal",
            "type": "quantitative",
            "title": "Total Immigrants",
            "format": ","
          }
        ]
      }
    },
    {
      "transform": [
        {
          "filter": "viewType == 'Yes'"
        }
      ],
      "mark": {"type": "area"},
      "encoding": {
        "x": {"field": "year", "type": "ordinal", "title": "Year"},
        "y": {
          "field": "totalImmigrants",
          "type": "quantitative",
          "title": "Total Immigrants"
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "title": "Continent",
          "sort": {
            "field": "totalImmigrants",
            "op": "sum",
            "order": "descending"
          }
        },
        "tooltip": [
          {"field": "year", "type": "ordinal", "title": "Year"},
          {
            "field": "totalImmigrants",
            "type": "quantitative",
            "format": ",",
            "title": "Total Immigrants"
          },
          {"field": "Continent", "type": "nominal", "title": "Continent"}
        ]
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "x": {"datum": "2020", "type": "ordinal"},
        "color": {"value": "red"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "dx": 5,
        "dy": -5,
        "color": "red",
        "fontSize": 14  
      },
      "encoding": {
        "x": {"datum": "2019", "type": "ordinal"},
        "y": {"datum": 600000, "type": "quantitative"}, 
        "text": {"value": "Global Pandemic in 2019"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "dx": 5,
        "dy": -5,
        "color": "red",
        "fontSize": 14
      },
      "encoding": {
        "x": {"datum": "1997", "type": "ordinal"},
        "y": {"datum": 350000, "type": "quantitative"}, 
        "text": {"value": "General upwards trend in number of immigrants"}
      }
    }
  ],
  "width": 1000,
  "height": 450
}
